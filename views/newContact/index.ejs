<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/dtsel/dtsel.css">
</head>

<body>
  <noscript>JavaScript is required in order for this to work.</noscript>
  <%- include('../includes/navigation.ejs') %>
  
  <main class="padded">

    <!-- Title -->
    <section>
      <h2>Create new contact</h2>
    </section>

    <!-- Inputs -->
    <section>
      <div class="form-control">
        <label for="first-name">First name</label>
        <input type="text" name="first-name" id="first-name">
      </div>
      <div class="form-control">
        <label for="middle-name">Middle name</label>
        <input type="text" name="middle-name" id="middle-name">
      </div>
      <div class="form-control">
        <label for="last-name">Last name</label>
        <input type="text" name="last-name" id="last-name">
      </div>

      <hr/>

      <div class="form-control">
        <label for="datePicker">Date of birth</label>
        <p class="date">
          <input name="datePicker" type="text" id="dob" placeholder="Add date" autocomplete="off">
        </p>
      </div>

      <div class="form-control">
        <label for="summary">Summary of contact</label>
        <textarea name="summary" id="summary"></textarea>
      </div>

      <hr/>

      <div class="form-control">
        <label for="mobile">Mobile #</label>
        <input name="mobile" id="mobile" type="text">
      </div>

      <div class="form-control">
        <label for="email">Email</label>
        <input name="email" id="email" type="text">
      </div>

      <div class="form-control">
        <label for="whatsApp">WhatsApp #</label>
        <input name="whatsApp" id="whatsApp" type="text">
      </div>

      <div class="form-control">
        <label for="nationality">Nationality</label>
        <input name="nationality" id="nationality" type="text">
      </div>

      <div class="form-control">
        <label for="livingIn">Currently living in</label>
        <input name="livingIn" id="livingIn" type="text">
      </div>

      <div class="flex-box">
        <button class="btn--caution" onclick="_newContactFns.submitContact()">Submit</button>
        <button class="btn" onclick="_newContactFns.clearPage()">Reset</button>
      </div>
    </section>

  </main>

  <script src="/js/shared.js" type="module"></script>
  <script src="/js/dtsel/dtsel.js" type="text/javascript"></script>
  <script src="/js/newContact.js" type="module"></script>
  
<%- include('../includes/end.ejs') %>